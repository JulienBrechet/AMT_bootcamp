<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>ch.heigvd.amt.bootcamp.web.filters.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.bootcamp.web.controllers.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfigurationServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.bootcamp.web.controllers.ConfigurationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.bootcamp.web.controllers.ManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePersonServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.bootcamp.web.controllers.DeletePersonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPersonServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.bootcamp.web.controllers.EditPersonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.bootcamp.web.controllers.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfigurationServlet</servlet-name>
        <url-pattern>/pages/configuration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageServlet</servlet-name>
        <url-pattern>/pages/manage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePersonServlet</servlet-name>
        <url-pattern>/pages/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPersonServlet</servlet-name>
        <url-pattern>/pages/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/pages/home</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
